@model Albumes.ViewModels.SongSearchViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">
    <i class="bi bi-music-note-beamed"></i>
    Canciones
</h1>


<div>
    <a class="btn btn-primary" asp-action="Create" role="button">
        <i class="bi bi-plus"></i>
        Agregar canciones
    </a>
</div>

<div class="mt-4">
<form method="get" asp-action="Index">
    <div class="col-2 form-group">
        <input class="form-control" asp-for="NameFilter"/> 
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i>
            Buscar
        </button>          
    </div>
</form>
</div>

<div class="row mt-4">
@foreach (var song in Model.Songs)
{
    <div class="col-12">
        <div class="card text-white bg-dark mb-3">
            <div class="row no-gutters">
                <div class="col-md-10">
                    <div class="card-body d-flex flex-column justify-content-between h-100">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Album: @song.AlbumName</h5>
                                <p class="card-text text-justify">
                                    Canciones del album: @song.Name
                                </p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@song.Id">
                                    <i class="bi bi-trash"></i>
                                    Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>