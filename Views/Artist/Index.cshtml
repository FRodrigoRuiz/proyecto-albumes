@using Albumes.ViewModels;

@model ArtistViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Artistas</h1>

<div>
    <a class="btn btn-primary" asp-action="Create" role="button">Create New</a>
</div>

<br>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Artist">
        <div class="col-6 form-group">
            <input class="form control" asp-for="NameFilter"/>
        </div>
        <button class="btn" type="submit">Buscar artista</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists[0].Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Artists) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <div>
                    <a class="btn btn-primary btn-sm mr-2" asp-action="Details" asp-route-id="@item.Id">Stock</a>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
