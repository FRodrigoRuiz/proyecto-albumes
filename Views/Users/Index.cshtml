@using Albumes.ViewModels;
@model Albumes.ViewModels.UserSearchViewModel;

<h3>Usuarios</h3>

<form method="get" asp-action="Index">
    <div class="col-2 form-group">
        <input class="form-control" asp-for="UsernameFilter" placeholder="Nombre"/> 
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i>
            Buscar
        </button>          
    </div>
</form>

<div class="row mt-4">
    @foreach (var item in Model.Users)
    {
        <div class="col-12">
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">@item.UserName</h5>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i>
                                        Asignar rol
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>