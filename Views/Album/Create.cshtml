@using Albumes.ViewModels;

@model AlbumCreateViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo Album</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Story" class="control-label"></label>
                <textarea asp-for="Album.Story" class="form-control" maxlength="2500" rows="4"></textarea>
                <span asp-validation-for="Album.Story" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Year" class="control-label"></label>
                <input asp-for="Album.Year" class="form-control" />
                <span asp-validation-for="Album.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Genre" class="control-label"></label>
                <select asp-for="Album.Genre" class="form-control">
                    <option value="0">Rock</option>
                    <option value="1">Blues</option>
                    <option value="2">Metal</option>
                </select>
                <span asp-validation-for="Album.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Seleccione la lista de canciones</label>
                <select multiple name="SelectedSongs" class="form-control">
                    @if (Model.Songs != null)
                    {
                        @foreach (var song in Model.Songs)
                        {
                            <option value="@song.Id">@song.Name</option>
                        }
                    }else{
                        <option value="">No hay albumes disponibles</option>
                    }                   
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Album.Price" class="control-label"></label>
                <input asp-for="Album.Price" class="form-control" />
                <span asp-validation-for="Album.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
