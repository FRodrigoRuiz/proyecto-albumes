@using Albumes.ViewModels;

@model AlbumViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>
    <i class="bi bi-vinyl-fill"></i>
    Albumes
</h1>

<div>
    <a class="btn btn-primary" asp-action="Create" role="button">
        <i class="bi bi-plus"></i>
        Agregar album
    </a>
</div>

<div class="mt-4">
    <form method="get" asp-action="Index">
        <div class="col-2 form-group">
            <input class="form-control" asp-for="NameFilter"/> 
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i>
                Buscar
            </button>          
        </div>
    </form>
</div>


<div class="row mt-4">
    @foreach (var album in Model.Albums)
    {
        <div class="col-12">
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">@album.Title (@album.Year)</h5>
                                    <p class="card-text text-justify">@(album.Story.Length > 500 ? $"{album.Story.Substring(0, 500)}..." : album.Story)</p>
                                </div>
                                <div>
                                    <h5>$@album.Price</h5>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p class="card-text mb-0 mt-2">
                                    <i class="bi bi-music-note-beamed"></i>
                                    <small class="text-muted">@album.Genre</small>
                                </p>
                                <div>
                                    <a asp-action="Details" asp-route-id="@album.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-camera-reels"></i>
                                        Detalles
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@album.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                        Editar
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@album.Id">
                                        <i class="bi bi-trash"></i>
                                        Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

